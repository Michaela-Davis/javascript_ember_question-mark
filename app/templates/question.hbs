<!-- this is the individual question page - it should show notes, and eventually answers too -->
<div class="questionContainer">
<br>
&nbsp;<i class="fa fa-question-circle teal" aria-hidden="true"></i><span class="indexQuestion"> {{model.question.title}}</span>

<span class="indexAuthor">&nbsp;&nbsp;&nbsp;- {{model.question.author}}</span> <br>

{{question-update question=model update="update"}}
<br>
&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-sticky-note" aria-hidden="true"></i> Notes: {{model.question.notes}} <br>

<hr>
<br>
<i class="fa fa-bullhorn" aria-hidden="true"></i> Answers :{{new-answer saveAnswer="saveAnswer"}}<br>
<ul>
  {{#each model.answers as |answer|}}
    <li> {{answer.content}} - by {{answer.author}}</li>
  {{/each}}
</ul>

</div>
